#!/usr/bin/env bash
set -e

[[ -n "$TMUX" ]] && tmux rename-window -t${TMUX_PANE} "taskflow"

cleanup() {
  [[ -n "$TMUX" ]] && tmux set-window-option automatic-rename "on"
}
trap cleanup EXIT

TASKFLOW_DIR="$HOME/repos/bitbucket.wolterskluwer.io/scm/taskflow/wkapp-taskflow"
cd "$TASKFLOW_DIR"

CURRENT_BRANCH="$(git rev-parse --abbrev-ref HEAD)"

CMD=$1
shift

exe() { echo "==> $@" ; ($@) ; }

case $CMD in
  pull)
    if [[ $CURRENT_BRANCH != "master" ]]; then
      exe "git wip"
      exe "git fetch-rebase master"
    else
      exe "git tidy"
    fi
    ;;


  update)
    exe "yarn install"
    exe "yarn build"
    ;;


  start)
    if [[ -z "$(docker ps | grep wk_app_taskflow_gateway)" ]]; then
      exe "yarn gateway"
    fi
    exe "yarn start:dev"
    ;;

  test)
    exe "yarn test"
  ;;

  *)
    if [[ -z "$CMD" ]]; then
      echo "USAGE: taskflow (update|start)"
      exit 0
    fi
    ;;
esac

cleanup
