#!/usr/bin/env bash
# Prune merged branches from local.
set -e

git fetch --quiet

merged_branches="$(git branch --merged | grep -vE '^\*' | grep -vE ' master$' || echo)"

if [[ -z "$merged_branches" ]]; then
  echo "No merged branches to delete."
  exit
fi

for branch in $merged_branches; do
  git branch -d "$branch"
done

echo "Merged branches deleted."
