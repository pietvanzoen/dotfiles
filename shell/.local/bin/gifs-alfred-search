#!/bin/bash

set -e

QUERY=$1
DIR=$HOME/Dropbox/Piet/gifs
BREW_PREFIX=$(brew --prefix)

if [[ -z $QUERY ]]; then
  ITEMS=$($BREW_PREFIX/bin/exa -r --sort created $DIR | xargs -I_ echo "$DIR/_")
else
  ITEMS=$(mdfind -onlyin $DIR "$QUERY")
fi

echo '{ "items": ['
for f in $ITEMS; do
cat <<EOB
{
  "title": "$(basename $f)",
  "type": "file",
  "arg": "$f",
  "icon": {
    "path": "$f"
  }
},
EOB
done
echo ']}'
