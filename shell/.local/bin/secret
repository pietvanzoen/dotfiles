#!/usr/bin/env bash
set -e

SERVICE_NAME="SECRET_CLI"

CMD=$1
NAME=$2
SECRET=$3

function main() {

  case "$CMD" in
    "get")
      assert $NAME
      get_secret
      ;;
    "set")
      assert $NAME
      assert $SECRET
      set_secret
      ;;
    "delete")
      assert $NAME
      delete_secret
      ;;
    *)
      usage_and_exit
      ;;
  esac
}


function usage_and_exit() {
  local cmd=$(basename $0)
  echo "Usage: "
  echo "  $cmd get <name>           Get secret with given name."
  echo "  $cmd set <name> <value>   Set secret with given name and value."
  echo "  $cmd delete <name>        Delete secret with given name."
  exit 1
}

function get_secret() {
  set +e
  output="$(/usr/bin/security 2>&1 > /dev/null find-generic-password -s $SERVICE_NAME -a $NAME -g)"
  set -e

  if (echo $output | grep security); then
    exit 1
  fi

  echo -n "$output" |
    grep password |
    sed -E 's/^password: "(.+)"$/\1/'
}

function set_secret() {
  /usr/bin/security add-generic-password -s $SERVICE_NAME -a $NAME -w $SECRET -U -j "Added by $0"
}

function delete_secret() {
  /usr/bin/security 2>&1 >/dev/null delete-generic-password -s $SERVICE_NAME -a $NAME
}

function assert() {
  if [[ -z "$1" ]]; then
    usage_and_exit
  fi
}

main
