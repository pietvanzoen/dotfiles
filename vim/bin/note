#!/bin/bash

set -e

if [[ -z "$NOTES_PATH" ]]; then
  echo "\$NOTES_PATH must be set"
  exit 1
fi

title="$*"
filename="$NOTES_PATH/$(date -u +%Y-%m-%d)-$(slugify $title).md"

if [[ -z "$title" ]]; then
  echo "Usage: note <title>"
  exit 1
fi

cat << EOF > "$filename"
# $title


@$(date -u +"%Y-%m-%dT%H:%M:%SZ")
EOF

echo "$filename"
